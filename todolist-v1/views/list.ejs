<%- include('header') -%>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    <div class="box">
        <ul>
            <% for (var i = 0 ; i < items.length; i++) { %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= items[i] %></p>
                </div>   
            <% } %>
            
        </ul>

        <form action="/" method="post" class="item">
            <input type="text" name="newItem" id="" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
    </div>
    
</body>
</html>